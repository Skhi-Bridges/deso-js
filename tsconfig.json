{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "ES6",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "inlineSources": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
